<resources>


    <attr format="enum" name="esBrand">
        <enum name="primary" value="0"/>
        <enum name="success" value="1"/>
        <enum name="info" value="2"/>
        <enum name="warning" value="3"/>
        <enum name="danger" value="4"/>
        <enum name="regular" value="5"/>
        <enum name="secondary" value="6"/>
    </attr>

    <!-- Declare custom theme attributes that allow changing which styles are
     used for button bars depending on the API level.
     ?android:attr/buttonBarStyle is new as of API 11 so this is
     necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ESBootstrapButton">
        <attr name="isDarkGray" format="boolean"/>
        <attr name="esBrand"/>
        <attr name="hasWhiteBackground" format="boolean"/>
        <attr name="hasBlueishWhiteBackground" format="boolean"/>
        <attr name="useXLText" format="boolean"/>
        <attr name="useCustomTextColor" format="reference"/>
    </declare-styleable>

    <attr name="simTextViewType" format="enum">
        <enum name="hr" value="0"/>
        <enum name="spo2" value="1"/>
        <enum name="etco2" value="2"/>
        <enum name="respRate" value="3"/>
        <enum name="bp" value="4"/>
        <enum name="none" value="5"/>
    </attr>

    <declare-styleable name="ESTextView">
        <attr name="simTextViewType" />
    </declare-styleable>

    <attr name="animated" format="boolean"/>
    <attr name="bootstrapProgress" format="integer"/>
    <attr name="bootstrapMaxProgress" format="integer"/>
    <attr name="roundedCorners" format="boolean"/>

    <declare-styleable name="ESDefiChargeBar">
        <attr name="animated"/>
        <attr name="bootstrapProgress"/>
        <attr name="bootstrapMaxProgress"/>
        <attr name="roundedCorners"/>
    </declare-styleable>

</resources>
